.showDistance{
    display: block;
    padding-top: 100px;
    padding-left: 80px;
    width: 100%;
    height: 120px;

}
.showDistance text{
    height: 104px;
    line-height: 104px;
    font-size: 104px;
    font-weight: 500;
    text-align: center;
    color: #19ad1b;
}
#description{
    height: 30px;
    line-height: 30px;
    font-size: 18px;
    font-weight: 500;
    margin-left: 10px;
}
.timeAndSpeed{
    width: 100%;
}
.timeAndSpeed text{
    display: block;
    height: 50px;
    line-height: 50px;
    font-size: 24px;
    font-weight: 500;
}
.time, .speed{
    display: inline-block;
    width: 50%;
    text-align: center;
}
/*
按钮的样式*/
.pauseAndStop{
    position: absolute;
    bottom: 180px;
    z-index: 100;
    width: 100%;
    text-align: center;
}
.pauseAndStop image{
    
    display: inline-block;
    width: 100px;
    height: 100px;
    

}
