<view class="content">
    <view class="picture">
        <image style="width: 100%; height: 173px" src="../imgs/plan/2.png"></image>
    </view>
    <view style="height: 256px" class ="rankingBoard" >
        <view style="height: 64px" class="myRanking">
            <image style="border-radius: 50%;width: 42px; height: 42px;float:left" src="{{avatorUrl}}" ></image>
            <view style="float: left; font-size: 14px; color: #9b9b9b;height: 54px; line-height: 54px">
                <text>{{nickName}}</text>
                <text>第4名</text>
            </view>
            <text style="float: right; font-size: 14px;color: #9b9b9b;height: 54px; line-height: 54px">7.2 公里</text>
        </view>
        <view style="height: 54px; border-bottom: 1px solid #9b9b9b;margin-top: 10px; "  class="rankingItem" wx:for="{{rankingData}}">
            <text style="float:left; vertical-align: middle;height: 54px; line-height: 54px; margin-right: 10px;">{{index+1}}</text>
            <image style="border-radius: 50%;width: 42px; height: 42px;float:left;vertical-align: middle;margin-right: 10px;" src="{{item.avatorUrl}}" ></image>
            <view style="float: left; font-size: 14px; color: #9b9b9b;vertical-align: middle; height: 54px; line-height: 54px">
                <text>{{item.nickName}}</text>
            </view>
            <text style="float: right; font-size: 14px;color: #9b9b9b;vertical-align: middle; height: 54px; line-height: 54px">7.2 公里</text>
        </view>
    </view>
     <view class="toolBar">
      <view class="item">
        <image src="../imgs/sportActive.png" bindtap="enterSport"></image>
      </view>
      <view class="item">
        <image src="../imgs/ranking.png" bindtap="enterRanking"></image>
      </view>
      <view class="item">
        <image src="../imgs/me.png" bindtap="enterMe"></image>
      </view>
    </view>

</view>