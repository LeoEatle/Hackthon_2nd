/**覆盖默认的button样式**/
button{
  border-radius: 0px;
}
/*内容样式*/
.content{
  display: block;
  height: 600px;
  width: 100%;
  background-color: #ffffff;
}
/*选择的两个按钮*/
.chooseButtons{
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 30px;
  line-height: 30px;
  margin-top: 0px;
  color: #9B9B9B;
}
#buttoninActive{
  display: block;
  border-radius: 0px;
  width: 142px;
  text-align: center;
  font-size: 18px;
  font-weight: 800; 
}
#buttonActive{
  display: block;
  border-radius: 0px;
  width: 142px;
  text-align: center;
  font-size: 18px;
  font-weight: 500; 
  border-bottom:  2px solid #19ad1b;
  color:  #19ad1b;
}

/*地图内容*/
.mapContent{

}

/*按钮之前的information区域*/
.information{
  display: block;
  margin-top: 100px;
  width: 100%;
  height: 100px;
  font-size: 24px;
  background-color: #ffffff;
}
.information text{
  font-size: 24px;
  color: #595656;

}
.information label{
  font-size: 10px;
  color: #595656;
}
/*开始按钮区域*/
.startContent{
  width: 100%;
  height: 100%;
  padding-top: 0px;
  text-align: center;
  margin-top: 30px;
}
#startRunning{
  border-radius: 50%;
  width: 80px;
  height: 80px;
  line-height: 150px;
  text-align: center;
  padding: 0px;
  margin: 0px auto;
}
.startContent text{
  display: block;
  margin: 10px auto;
  font-size: 14px;
  font-weight: 300;
  text-align: center;
}
.start{
  position: absolute;
  left: 38%;
  bottom: 180px;
  z-index: 100;
  display: block;
  width: 100px;
  height: 100px;

}


/*toolBar区域*/
.toolBar{
  position: absolute;
  display: block;
  width: 100%;
  bottom: 0px;
  padding: 0, 0.53rem;
  height: 56px;
}

.item{
  display: inline-block;
  width: 30%;
  padding-top: 0.9rem;
}

.item image{
  width: 30px;
  height: 30px;
}